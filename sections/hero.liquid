<section>
    <header class="w-full bg-gray-300 flex justify-around">
        <div class="absolute bg-white sm:m-auto m-10 flex self-center md:w-4/12 w-2/3 sm:h-3/6 h-2/6 text-center flex-col">
            <h1 class="py-6 text-4xl md:text-6xl font-bold">{{ section.settings.headline_copy }}</h1>
            <h2 class="font-semibold mx-3 md:w-60 md:self-center">{{ section.settings.sub_heading }}</h2>
            <button id="bt" class="group bg-red-500 text-lg font-medium flex self-center px-8 py-2 my-6 translate-y-16 text-white items-end rounded-sm"><a href="collections/all">Browse</a><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mb-0.5 mx-1 group-hover:translate-x-3 group-hover:duration-100" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            </button>
        </div>
        {% if section.settings.hero_image != blank %}
            <img class="xsm:h-3/5 w-full object-cover" src="{{ section.settings.hero_image | img_url : 'large' }}">
        {% else %}
            {{ "lifestyle-1" | placeholder_svg_tag }}
        {% endif %}
    </header>
</section>





{% schema %}
    {
        "name": "Hero editor",
        "class": "hero-section",
        "settings": [
            {
                "type": "image_picker",
                "id": "hero_image",
                "label": "Pick an Image for the Hero"
            },
            {
                "type": "text",
                "id": "headline_copy",
                "label": "Headline Copy",
                "default": "Feel Fresh."
            },
            {
                "type": "richtext",
                "id": "sub_heading",
                "label": "Subheading",
                "default": "<p>Get your 30% off discount code for un upcoming christmas</p>"
            }
        ],
        "presets": [
            {
                "category": "Hero",
                "name":"simple_hero"
            }
        ]
    }
{% endschema %}